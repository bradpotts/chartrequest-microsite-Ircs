---
// Hero component for IRCS Certification landing page
import Heading from './ui/Heading.astro';
import Text from './ui/Text.astro';
---

<section class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center px-5 sm:px-6 lg:px-8 py-5 sm:py-10 lg:py-20">
	<div class="max-w-7xl mx-auto">
		<div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
			<!-- Left Content -->
			<div class="text-left">
				<!-- Badge -->
				<div class="inline-flex items-center space-x-2 bg-blue-100 text-blue-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
					</svg>
					<span>Professional Certification Program</span>
				</div>

				<!-- Main Heading -->
				<Heading level="1" size="xl" class="mb-6">
					Become an <br>
					<span class="text-blue-600">Information Release and</span><br>
					<span class="text-gray-900">Compliance Specialist</span>
				</Heading>

				<!-- Description -->
				<Text variant="lead" color="muted" class="mb-8">
					Advance your healthcare career with comprehensive HIPAA-compliant ROI training. Join thousands of professionals who have enhanced their expertise with our industry-recognized certification.
				</Text>

				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 mb-8">
					<a href="#enroll" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-200 inline-flex items-center justify-center shadow-sm hover:shadow-md hover:-translate-y-0.5">
						Enroll Now - $495
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
						</svg>
					</a>
					<a href="#contact" class="border-2 border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 px-8 py-4 rounded-full font-semibold text-lg transition-all duration-200 hover:-translate-y-0.5">
						Contact Us
					</a>
				</div>

				<!-- Features -->
				<div class="grid grid-cols-1 sm:grid-cols-3 gap-6 text-sm">
					<div class="flex items-center space-x-2">
						<div class="w-2 h-2 bg-blue-600 rounded-full"></div>
						<span class="text-gray-700 font-medium">HIPAA Compliance</span>
					</div>
					<div class="flex items-center space-x-2">
						<div class="w-2 h-2 bg-blue-600 rounded-full"></div>
						<span class="text-gray-700 font-medium">Industry Recognized</span>
					</div>
					<div class="flex items-center space-x-2">
						<div class="w-2 h-2 bg-blue-600 rounded-full"></div>
						<span class="text-gray-700 font-medium">2-Year Validity</span>
					</div>
				</div>
			</div>

			<!-- Right Image -->
			<div class="relative">
				<div class="relative z-10">
					<img 
						src="/images/ircs-image-hero.webp" 
						alt="Healthcare professional holding IRCS certification" 
						class="w-full h-auto rounded-2xl shadow-2xl"
					/>
				</div>
				<!-- Background decoration -->
				<div class="absolute -top-6 -right-6 w-full h-full bg-blue-200 rounded-2xl -z-10"></div>
			</div>
		</div>
	</div>
</section>
