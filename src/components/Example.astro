---
/**
 * Example component showing how to use our UI components
 */
import Section from './ui/Section.astro';
import Heading from './ui/Heading.astro';
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import InfoBox from './ui/InfoBox.astro';
import InfoBoxHorizontal from './ui/InfoBoxHorizontal.astro';
import InfoBoxMinimal from './ui/InfoBoxMinimal.astro';

// Icons as SVG strings
const clockIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>`;

const laptopIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
</svg>`;

const certificateIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
</svg>`;

const priceIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>`;

const userGroupIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
</svg>`;
---

<Section background="light" id="example">
  <div class="text-center mb-12">
    <Heading level="2" size="lg">
      Using <span class="text-primary">Component-Based</span> Architecture
    </Heading>
    <p class="text-lg text-gray-800 max-w-3xl mx-auto mt-4">
      This example shows how we can use reusable components instead of custom CSS classes
    </p>
  </div>
  
  <!-- Info Boxes - Clean, Modern Style without Heavy Shadows -->
  <div class="mb-8">
    <Heading level="3" size="md" class="mb-6">Style 1: Standard Info Boxes with Color Options</Heading>
    <div class="grid md:grid-cols-3 gap-6 mb-12">
      <InfoBox
        icon={clockIcon}
        value="8-10 Hours"
        title="Self-paced learning"
        color="primary"
      />
      <InfoBox
        icon={laptopIcon}
        value="100% Online"
        title="Learn from anywhere"
        color="blue"
        bgColor="blue"
      />
      <InfoBox
        icon={certificateIcon}
        value="1000+"
        title="Certified professionals"
        color="green"
        bgColor="green"
      />
    </div>
    
    <div class="grid md:grid-cols-3 gap-6 mb-12">
      <InfoBox
        icon={priceIcon}
        value="$499"
        title="Certification fee"
        color="amber"
        bgColor="amber"
      />
      <InfoBox
        icon={userGroupIcon}
        value="24/7"
        title="Available support"
        color="purple"
        bgColor="purple"
      />
      <InfoBox
        icon={certificateIcon}
        value="2 Years"
        title="Valid certification"
        color="gray"
        bgColor="gray"
      />
    </div>
  </div>
  
  <!-- Horizontal Info Boxes with Left Accents -->
  <div class="mb-8">
    <Heading level="3" size="md" class="mb-6">Style 2: Horizontal Info Boxes with Color Accents</Heading>
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <InfoBoxHorizontal
        icon={clockIcon}
        value="8-10 Hours"
        title="Self-paced learning"
        accent="primary"
        color="primary"
      />
      <InfoBoxHorizontal
        icon={laptopIcon}
        value="100% Online"
        title="Learn from anywhere"
        accent="blue"
        color="blue"
        bgColor="blue"
      />
      <InfoBoxHorizontal
        icon={certificateIcon}
        value="1000+"
        title="Certified professionals"
        accent="green"
        color="green"
        bgColor="green"
      />
      <InfoBoxHorizontal
        icon={priceIcon}
        value="$499"
        title="Certification cost"
        accent="amber"
        color="amber"
        bgColor="amber"
      />
      <InfoBoxHorizontal
        icon={userGroupIcon}
        value="Global Team"
        title="Support network"
        accent="purple"
        color="purple"
        bgColor="purple"
      />
      <InfoBoxHorizontal
        icon={certificateIcon}
        value="2 Years"
        title="Valid certification"
        accent="gray"
        color="gray"
        bgColor="gray"
      />
    </div>
  </div>
  
  <!-- Minimal Info Boxes -->
  <div class="mb-16">
    <Heading level="3" size="md" class="mb-6">Style 3: Minimal Info Boxes with Color Options</Heading>
    <div class="bg-gray-50 p-6 rounded-xl">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        <InfoBoxMinimal
          icon={clockIcon}
          value="8-10"
          title="Hours"
          color="primary"
        />
        <InfoBoxMinimal
          icon={laptopIcon}
          value="100%"
          title="Online"
          color="blue"
        />
        <InfoBoxMinimal
          icon={certificateIcon}
          value="1000+"
          title="Certified"
          color="green"
        />
        <InfoBoxMinimal
          icon={priceIcon}
          value="$499"
          title="Fee"
          color="amber"
        />
        <InfoBoxMinimal
          icon={userGroupIcon}
          value="24/7"
          title="Support"
          color="purple"
        />
        <InfoBoxMinimal
          icon={certificateIcon}
          value="2 Yrs"
          title="Valid"
          color="gray"
        />
      </div>
    </div>
  </div>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <Card>
      <div class="flex flex-col h-full">
        <div class="w-12 h-12 bg-primary rounded-xl flex items-center justify-center mb-5">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <Heading level="3" size="sm">Component-Based Design</Heading>
        <p class="text-gray-800 my-4">Reusable components reduce the need for custom CSS classes and promote consistency.</p>
        <div class="mt-auto">
          <Button variant="outline">Learn More</Button>
        </div>
      </div>
    </Card>
    
    <Card>
      <div class="flex flex-col h-full">
        <div class="w-12 h-12 bg-amber-500 rounded-xl flex items-center justify-center mb-5">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <Heading level="3" size="sm">Tailwind CSS Integration</Heading>
        <p class="text-gray-800 my-4">Using Tailwind classes directly in components for maximum flexibility.</p>
        <div class="mt-auto">
          <Button variant="primary">Get Started</Button>
        </div>
      </div>
    </Card>
    
    <Card>
      <div class="flex flex-col h-full">
        <div class="w-12 h-12 bg-emerald-500 rounded-xl flex items-center justify-center mb-5">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
          </svg>
        </div>
        <Heading level="3" size="sm">Modern Design System</Heading>
        <p class="text-gray-800 my-4">A cohesive design system with consistent spacing, typography, and colors.</p>
        <div class="mt-auto pt-4">
          <a href="#" class="text-primary font-medium hover:underline inline-flex items-center">
            View Documentation
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </Card>
  </div>
</Section>
