---
// Certification Cost and Enrollment Details component for IRCS
import Section from './ui/Section.astro';
import Heading from './ui/Heading.astro';
import Card from './ui/Card.astro';
import InfoBox from './ui/InfoBox.astro';
import InfoBoxHorizontal from './ui/InfoBoxHorizontal.astro';
import InfoBoxMinimal from './ui/InfoBoxMinimal.astro';
import Button from './ui/Button.astro';
import Text from './ui/Text.astro';

// Icons
const clockIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>`;

const priceIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>`;

const calendarIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
</svg>`;

const certificateIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
</svg>`;
---

<Section background="light" id="costs">
  <!-- Section Header -->
  <div class="text-center mb-16">
    <Heading level="2" size="lg" align="center" color="primary" class="font-bold mb-4">
      Certification Cost and <span class="text-blue-600">Enrollment Details</span>
    </Heading>
    <Text variant="lead" color="muted" align="center" class="max-w-3xl mx-auto">
      Everything you need to get certified in one comprehensive package
    </Text>
  </div>

  <!-- Main Content -->
  <Card color="white" class="max-w-4xl mx-auto overflow-hidden mb-12">
    <!-- Program Header -->
    <div class="bg-blue-600 text-white py-4 px-6 text-center -m-7 mb-7">
      <Heading level="3" size="sm" class="text-white">IRCS Certification Program</Heading>
    </div>

    <!-- Program Details -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
      <div>
        <div class="text-sm text-gray-500 mb-1">One-time Cost</div>
        <div class="text-4xl font-bold">$495</div>
      </div>
      <div class="mt-3 md:mt-0 bg-blue-100 text-blue-800 px-4 py-1 rounded-full text-sm font-medium">
        Valid for 2 years upon completion
      </div>
    </div>

    <!-- What's Included -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <img src="/images/ircs-icon-whats-included.svg" alt="" class="w-5 h-5 mr-2" />
        <h4 class="text-base font-semibold text-gray-900">What's Included:</h4>
      </div>
      
      <div class="grid md:grid-cols-2 gap-x-8 gap-y-3">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span>Comprehensive online training modules</span>
        </div>
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span>Practice assessments and knowledge checks</span>
        </div>
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span>Final certification exam</span>
        </div>
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span>Digital certificate upon successful completion</span>
        </div>
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span>IRCS digital badge for professional profiles</span>
        </div>
      </div>
    </div>

    <!-- How It Works -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <img src="/images/ircs-icon-how-it-works.svg" alt="" class="w-5 h-5 mr-2" />
        <h4 class="font-semibold text-lg">How It Works:</h4>
      </div>
      
      <div class="space-y-4">
        <div class="flex">
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center mr-3 font-semibold">1</div>
          <div>
            <div class="font-semibold">Register and Pay</div>
            <div class="text-sm text-gray-600">Complete the enrollment form and payment process</div>
          </div>
        </div>
        
        <div class="flex">
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center mr-3 font-semibold">2</div>
          <div>
            <div class="font-semibold">Access Online Training</div>
            <div class="text-sm text-gray-600">Receive login credentials to access all training materials</div>
          </div>
        </div>
        
        <div class="flex">
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center mr-3 font-semibold">3</div>
          <div>
            <div class="font-semibold">Complete Coursework</div>
            <div class="text-sm text-gray-600">Work through modules at your own pace (approximately 8-10 hours total)</div>
          </div>
        </div>
        
        <div class="flex">
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center mr-3 font-semibold">4</div>
          <div>
            <div class="font-semibold">Pass Certification Exam</div>
            <div class="text-sm text-gray-600">Complete the final assessment with a score of 80% or higher</div>
          </div>
        </div>
        
        <div class="flex">
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center mr-3 font-semibold">5</div>
          <div>
            <div class="font-semibold">Receive Certification</div>
            <div class="text-sm text-gray-600">Get your digital certificate and professional badge</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enroll CTA -->
    <div class="text-center pt-4">
      <a href="#enroll" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-full transition">
        Enroll Now
      </a>
    </div>
  </Card>

  <!-- Stats -->
  <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
    <!-- Hours -->
    <Card color="white" class="text-center">
      <div class="flex justify-center mb-3">
        <img src="/images/ircs-icon-self-paced-learning.svg" alt="Self-paced learning" class="w-10 h-10" />
      </div>
      <div class="text-xl font-bold mb-1">8-10 Hours</div>
      <div class="text-gray-600">Self-paced learning</div>
    </Card>
    
    <!-- Online -->
    <Card color="white" class="text-center">
      <div class="flex justify-center mb-3">
        <img src="/images/ircs-icon-learn-from-everywhere.svg" alt="Learn from anywhere" class="w-10 h-10" />
      </div>
      <div class="text-xl font-bold mb-1">100% Online</div>
      <div class="text-gray-600">Learn from anywhere</div>
    </Card>
    
    <!-- Professionals -->
    <Card color="white" class="text-center">
      <div class="flex justify-center mb-3">
        <img src="/images/ircs-icon-certified-professionals.svg" alt="Certified professionals" class="w-10 h-10" />
      </div>
      <div class="text-xl font-bold mb-1">1000+</div>
      <div class="text-gray-600">Certified professionals</div>
    </Card>
  </div>
</Section>
