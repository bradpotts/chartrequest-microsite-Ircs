---
// Contact component for IRCS Certification
import Section from './ui/Section.astro';
import Card from './ui/Card.astro';
import Heading from './ui/Heading.astro';
import Text from './ui/Text.astro';
---

<script>
  // Import client-side handlers
  import { loadTurnstileScript } from '../scripts/form-common-turnstile';
  import { setupContactFormSubmission } from '../scripts/form-contact-client';
  import { initContactFormTurnstile } from '../scripts/form-contact-turnstile';
  
  // Initialize all client-side functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Load Turnstile script
    loadTurnstileScript();
    
    // Setup form handlers
    setupContactFormSubmission();
    
    // Initialize Turnstile widget
    initContactFormTurnstile();
  });
</script>


<Section background="light" id="contact">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <Heading level="2" size="lg" color="primary" align="center" class="font-bold mb-4">
        <span class="text-blue-600">Contact Us</span>
      </Heading>
      <Text variant="lead" color="muted" align="center" class="max-w-3xl mx-auto">
        Have questions about the IRCS certification program? Our team is here to help.
      </Text>
    </div>
    
    <!-- Main Content -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <!-- Left Column: Contact Info and Business Hours -->
      <div class="space-y-6">
        <!-- Contact Info -->
        <Card color="white" class="p-8 h-auto flex flex-col">
          <div>
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                <img src="/images/ircs-icon-have-questions.svg" alt="Have Questions" class="w-6 h-6" />
              </div>
              <Heading level="3" size="sm" class="mb-2">Have Questions?</Heading>
            </div>
            <Text variant="body" class="mb-8">Our team is here to help answer any questions you may have about the IRCS certification program.</Text>
            
            <div class="flex items-center mb-6">
              <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                <img src="/images/ircs-icon-email-us.svg" alt="Email Us" class="w-5 h-5" />
              </div>
              <div>
                <Heading level="4" size="sm">Email Us</Heading>
                <a href="mailto:certification@chartrequest.com" class="text-gray-800 hover:text-blue-600 transition">certification@chartrequest.com</a>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                <img src="/images/ircs-icon-call-us.svg" alt="Call Us" class="w-5 h-5" />
              </div>
              <div>
                <Heading level="4" size="sm">Call Us</Heading>
                <a href="tel:+15551234567" class="text-gray-800 hover:text-blue-600 transition">(555) 123-4567</a>
              </div>
            </div>
          </div>
        </Card>
        
        <!-- Business Hours -->
        <Card color="blue" class="!p-6 text-white !bg-gradient-to-r !from-blue-500 !to-blue-600 border-blue-400">
          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center mr-4">
              <img src="/images/ircs-icon-business-hours.svg" alt="Business Hours" class="w-6 h-6" />
            </div>
            <div>
              <Heading level="4" size="sm" class="text-white">Business Hours</Heading>
              <div class="text-white/90">Monday - Friday: 9:00 AM - 5:00 PM EST</div>
            </div>
          </div>
        </Card>
      </div>
      
      <!-- Right: Contact Form -->
      <Card color="white" class="p-8 h-full">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
            <img src="/images/ircs-icon-send-us-message.svg" alt="Send us a Message" class="w-6 h-6" />
          </div>
          <Heading level="3" size="sm" class="mb-2">Send us a Message</Heading>
        </div>
        
        <form id="contact-form" class="space-y-4">
          <div id="form-success" class="hidden bg-green-100 text-green-800 p-4 rounded-lg mb-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Thank you for your message. We'll get back to you soon!</span>
            </div>
          </div>
          
          <div id="form-error" class="hidden bg-red-100 text-red-800 p-4 rounded-lg mb-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span id="error-message">An error occurred. Please try again.</span>
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="contactName" class="block text-sm font-medium text-gray-800 mb-1">Full Name</label>
              <input 
                type="text" 
                id="contactName" 
                name="contactName"
                placeholder="Required" 
                required
                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
              />
            </div>
            <div>
              <label for="contactEmail" class="block text-sm font-medium text-gray-800 mb-1">Email Address</label>
              <input 
                type="email" 
                id="contactEmail" 
                name="contactEmail"
                placeholder="Required" 
                required
                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
              />
            </div>
          </div>
          
          <div>
            <label for="contactOrg" class="block text-sm font-medium text-gray-800 mb-1">Organization/Company</label>
            <input 
              type="text" 
              id="contactOrg" 
              name="contactOrg"
              placeholder="Optional"
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
          
          <div>
            <label for="contactMsg" class="block text-sm font-medium text-gray-800 mb-1">Message</label>
            <textarea 
              id="contactMsg" 
              name="contactMsg"
              placeholder="Required" 
              required 
              rows="4"
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            ></textarea>
          </div>
          
          <!-- Turnstile container -->
          <div id="contact-turnstile" class="cf-turnstile mb-4" data-sitekey="0x4AAAAAABlkmjZZRT8r9BHM" data-action="microsite-ircs-form-contact"></div>
          
          <button 
            type="submit" 
            id="contact-submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-full transition mt-2 shadow-sm hover:shadow-md"
          >
            <span id="button-text">Send Message</span>
            <span id="button-loading" class="hidden">
              <svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Sending...
            </span>
          </button>
        </form>
      </Card>
    </div>
  </div>
</Section>
