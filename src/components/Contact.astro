---
// Contact component for IRCS Certification
---

<section class="py-20 px-5 sm:py-10 sm:px-6 lg:py-20 lg:px-8 bg-blue-50" id="contact">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
        <span class="text-blue-600">Contact Us</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Have questions about the IRCS certification program? Our team is here to help.
      </p>
    </div>
    
    <!-- Main Content -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <!-- Left: Contact Info -->
      <div class="bg-white rounded-2xl p-8 shadow-sm flex flex-col h-full">
        <div>
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
              <img src="/images/ircs-icon-have-questions.svg" alt="Have Questions" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-gray-900">Have Questions?</h3>
          </div>
          <p class="text-gray-700 mb-8">Our team is here to help answer any questions you may have about the IRCS certification program.</p>
          
          <div class="flex items-center mb-6">
            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
              <img src="/images/ircs-icon-email-us.svg" alt="Email Us" class="w-5 h-5" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Email Us</div>
              <div class="text-gray-700">certification@chartrequest.com</div>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
              <img src="/images/ircs-icon-call-us.svg" alt="Call Us" class="w-5 h-5" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Call Us</div>
              <div class="text-gray-700">(555) 123-4567</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right: Contact Form -->
      <div class="bg-white rounded-2xl p-8 shadow-sm">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
            <img src="/images/ircs-icon-send-us-message.svg" alt="Send us a Message" class="w-6 h-6" />
          </div>
          <h3 class="text-xl font-bold text-gray-900">Send us a Message</h3>
        </div>
        
        <form class="space-y-4">
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="contactName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <input 
                type="text" 
                id="contactName" 
                placeholder="Required" 
                required
                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
              />
            </div>
            <div>
              <label for="contactEmail" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
              <input 
                type="email" 
                id="contactEmail" 
                placeholder="Required" 
                required
                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
              />
            </div>
          </div>
          
          <div>
            <label for="contactOrg" class="block text-sm font-medium text-gray-700 mb-1">Organization/Company</label>
            <input 
              type="text" 
              id="contactOrg" 
              placeholder="Optional"
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            />
          </div>
          
          <div>
            <label for="contactMsg" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea 
              id="contactMsg" 
              placeholder="Required" 
              required 
              rows="4"
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-full transition mt-2"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
    
    <!-- Business Hours -->
    <div class="max-w-2xl mx-auto">
      <div class="flex items-center bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl p-6 shadow-sm">
        <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center mr-4">
          <img src="/images/ircs-icon-business-hours.svg" alt="Business Hours" class="w-6 h-6" />
        </div>
        <div>
          <div class="font-semibold text-lg">Business Hours</div>
          <div class="text-white/90">Monday - Friday: 9:00 AM - 5:00 PM EST</div>
        </div>
      </div>
    </div>
  </div>
</section>
