---
// WhoShouldGetCertified component for IRCS target audience
import Section from './ui/Section.astro';
import Heading from './ui/Heading.astro';
import Card from './ui/Card.astro';
import AccentCard from './ui/AccentCard.astro';

// Data for additional roles
const additionalRoles = [
	"Medical Office Managers",
	"Practice Administrators",
	"Medical Records Technicians",
	"Healthcare Consultants", 
	"Privacy Officers",
	"Healthcare IT Professionals"
];
---

<Section background="light" id="who-should-enroll">
	<!-- Section Header -->
	<div class="text-center mb-16">
		<Heading level="2" size="lg">
			Who Should Get <span class="text-primary">Certified?</span>
		</Heading>
		<p class="text-lg text-gray-600 max-w-4xl mx-auto mt-4 leading-relaxed">
			The IRCS certification is designed for healthcare professionals who manage or handle protected health information as part of their daily responsibilities.
		</p>
	</div>

	<!-- Primary Roles Grid -->
	<div class="grid md:grid-cols-3 gap-8 mb-16">
		<!-- ROI Specialists -->
		<Card class="text-center">
			<div class="w-16 h-16 bg-primary rounded-xl flex items-center justify-center mx-auto mb-6">
				<img src="/images/ircs-icon-roi-specialists.svg" alt="ROI Specialists" class="w-8 h-8" />
			</div>
			<Heading level="3" size="sm" class="mb-4">ROI Specialists</Heading>
			<p class="text-gray-600 leading-relaxed">
				Staff focused on managing release of information processes
			</p>
		</Card>

		<!-- HIM Professionals -->
		<Card class="text-center">
			<div class="w-16 h-16 bg-green-600 rounded-xl flex items-center justify-center mx-auto mb-6">
				<img src="/images/ircs-icon-him-professionals.svg" alt="HIM Professionals" class="w-8 h-8" />
			</div>
			<Heading level="3" size="sm" class="mb-4">HIM Professionals</Heading>
			<p class="text-gray-600 leading-relaxed">
				Health Information Management staff overseeing medical records
			</p>
		</Card>

		<!-- Compliance Officers -->
		<Card class="text-center">
			<div class="w-16 h-16 bg-purple-600 rounded-xl flex items-center justify-center mx-auto mb-6">
				<img src="/images/ircs-icon-compliance-officers.svg" alt="Compliance Officers" class="w-8 h-8" />
			</div>
			<Heading level="3" size="sm" class="mb-4">Compliance Officers</Heading>
			<p class="text-gray-600 leading-relaxed">
				Professionals responsible for ensuring regulatory compliance
			</p>
		</Card>
	</div>

		<!-- Also Beneficial Section -->
	<Card color="white" class="p-8">
		<div class="text-center mb-8">
			<div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4">
				<img src="/images/ircs-icon-beneficial.svg" alt="Also Beneficial" class="w-8 h-8" />
			</div>
			<Heading level="3" size="md">Also beneficial for</Heading>
		</div>

		<!-- Additional Roles Grid -->
		<div class="grid md:grid-cols-3 gap-6">
			{additionalRoles.map(role => (
				<AccentCard accent="blue">
					<span class="font-semibold text-gray-900">{role}</span>
				</AccentCard>
			))}
		</div>
	</Card>
</Section>
